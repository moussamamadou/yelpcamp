datasource sqlite {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id          String       @id @default(cuid())
  name        String       @default("")
  username    String       @unique @default("")
  password    String
  campgrounds Campground[] @relation("Campground_author")
  comments    Comment[]    @relation("Comment_author")
}

model Campground {
  id          String    @id @default(cuid())
  name        String    @default("")
  price       Float?
  description String    @default("")
  image       String    @default("")
  author      User?     @relation("Campground_author", fields: [authorId], references: [id])
  authorId    String?   @map("author")
  comments    Comment[] @relation("Comment_campgrounds")
  date        DateTime? @default(now())

  @@index([authorId])
}

model Comment {
  id            String      @id @default(cuid())
  description   String      @default("")
  author        User?       @relation("Comment_author", fields: [authorId], references: [id])
  authorId      String?     @map("author")
  campgrounds   Campground? @relation("Comment_campgrounds", fields: [campgroundsId], references: [id])
  campgroundsId String?     @map("campgrounds")
  date          DateTime?   @default(now())

  @@index([authorId])
  @@index([campgroundsId])
}